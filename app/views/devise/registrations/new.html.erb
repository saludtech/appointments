<div class="flex justify-end space-x-2">
  <button class=" bg-transparent px-4 py-1 text-sm text-pink-600 font-semibold rounded-full border border-pink-600 hover:text-white hover:bg-pink-600 hover:border-transparent focus:outline-none focus:ring-2 focus:ring-pink-600 focus:ring-offset-2"><%= link_to "LogIn", admin_session_path %></button>
</div>  

<h2 class="text-3xl text-black font-semibold">Sign up</h2>

<div class="py-8 px-8 max-w-sm  bg-white rounded-xl shadow-md">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource%>

      <div class="field mb-3">
        <%= f.label :email, class: 'block mb-2 font-bold' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-100 focus:bg-white focus:outline-none focus:border-orange-600 border-2 border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: 'block mb-2 font-bold' %>
        <% if @minimum_password_length %>
            <em class="mb-3 text-sm text-gray-500">(<%= @minimum_password_length%> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-100 focus:bg-white focus:outline-none focus:border-orange-600 border-2 border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, class: 'block mb-2 font-bold' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-100 focus:bg-white focus:outline-none focus:border-orange-600 border-2 border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal" %>
      </div>


      <div class="actions flex justify-center">
        <button class="flex justify-center bg-pink-600 px-4 py-1 text-sm text-white font-semibold rounded-full border border-pink-600 hover:text-pink-600 hover:bg-white hover:border-pink-600 focus:outline-none focus:ring-2 focus:ring-pink-600 focus:ring-offset-2">
          SignUp
        </button>
      </div>
    <% end %>
</div>
