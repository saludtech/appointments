<div class="flex justify-end space-x-2">
  <button class=" bg-transparent px-4 py-1 text-sm text-pink-600 font-semibold rounded-full border border-pink-600 hover:text-white hover:bg-pink-600 hover:border-transparent focus:outline-none focus:ring-2 focus:ring-pink-600 focus:ring-offset-2"><%= link_to "SignUp", new_admin_registration_path %></button> 
</div> 

<h2 class="text-3xl text-black font-semibold">Log in</h2>

<div class="py-8 px-8 max-w-sm  bg-white rounded-xl shadow-md">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="field mb-3">
      <%= f.label :email, class: "block mb-2 font-bold"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-100 focus:bg-white focus:outline-none focus:border-orange-600 border-2 border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, class: "block mb-2 font-bold" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "bg-gray-100 focus:bg-white focus:outline-none focus:border-orange-600 border-2 border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-3 text-sm text-gray-500">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions flex justify-center">
      <button class="flex justify-center bg-pink-600 px-4 py-1 text-sm text-white font-semibold rounded-full border border-pink-600 hover:text-pink-600 hover:bg-white hover:border-pink-600 focus:outline-none focus:ring-2 focus:ring-pink-600 focus:ring-offset-2">
          LogIn
      </button>
    </div>
  <% end %>


</div>