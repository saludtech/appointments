<div class="py-8 px-8 max-w-sm  bg-white rounded-xl shadow-md">
  <%= form_with model: profession do |form| %>
      <div class="mb-3">
        <%= form.label :name, class: 'block mb-2 font-bold' %>
        <%= form.text_field :name, class: "bg-gray-100 focus:bg-white focus:outline-none focus:border-orange-600 border-2 border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal" %>
        <% profession.errors.full_messages_for(:name).each do |message| %>
          <div class="text-gray-500 font-medium"><%= message %></div>
        <% end %>
      </div>

      <br>

      <div class="actions">
        <button class="bg-pink-600 px-4 py-1 text-sm text-white font-semibold rounded-full border border-pink-600 hover:text-pink-600 hover:bg-white hover:border-pink-600 focus:outline-none focus:ring-2 focus:ring-pink-600 focus:ring-offset-2">Create Profession</button>
        <button class="bg-transparent px-4 py-1 text-sm text-pink-600 font-semibold rounded-full border border-pink-600 hover:text-white hover:bg-pink-600 hover:border-pink-600 focus:outline-none focus:ring-2 focus:ring-pink-600 focus:ring-offset-2"><%= link_to "Cancel", professions_path %></button>
      </div>
    <% end %>
</div>

